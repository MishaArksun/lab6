@model Phone;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
</html>
<link rel="stylesheet" href="~/css/style.css">
<div class="edit-block">
    <h2>Автомобили</h2>
    @using (Html.BeginForm("Create", "Home"))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="dataBox">
            <label>Марка</label><br />
            @Html.TextBoxFor(m => m.Model, new { @class = "text-box" })
            @Html.ValidationMessageFor(m => m.Model)
        </div>
        <div class="dataBox">
            <label>Средняя цена</label><br />
            @Html.TextBoxFor(m => m.Price, new { type = "number", @class = "text-box" })
            @Html.ValidationMessageFor(m => m.Price)
        </div>        
        <div class="dataBox">
            <label>Компания</label><br />
            @Html.DropDownListFor(m => m.BrandId, ViewBag.Compans as SelectList) 
        </div>
        <br />
        <div class="dataBox">
            <input type="submit" value="Сохранить" />
        </div>
    }

    <div class="back">
    <a asp-action="Index">Вернуться</a>
    </div>
</div>

