@model Brand;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<link rel="stylesheet" href="~/css/style.css">
</html>
<h2>Страна</h2>
<div class="instr-block">

    @Html.HiddenFor(m => m.Id)
    <div style="font-weight:600">Компания: </div>
    <div>@Model.Name</div>
    <br />
    <div style="font-weight:600">Страна: </div>
    <div>@Model.Country</div>
    <br />
    <div>
        <div style="font-weight:600">Автомобили:</div>
        @foreach (var item in ViewData["Phs"] as IQueryable<Phone>)
        {
            @(item.Model+" - "+@item.Price) <br />
        }
    </div>
    <br />
    @Html.ActionLink("Редактировать", "Edit_brand", Model)
</div>
<div class="back">
    <a asp-action="Index">Вернуться</a>
</div>
